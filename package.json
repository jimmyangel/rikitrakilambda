{
  "name": "rikitraki-root",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "for i in {1..3}; do rm -rf .aws-sam/build && break || sleep 1; done",
    "build": "npm run clean && sam build",
    "buildnc": "npm run clean && sam build --no-cached",
    "deploy": "npm run build && sam deploy",
    "dev": "sam build && sam local start-api",
    "watch": "nodemon --watch functions --ext js,mjs,json,yaml --exec \"npm run dev\"",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "jest": "^30.2.0",
    "nodemon": "^3.0.0",
    "rimraf": "^6.1.2",
    "aws-sdk-client-mock": "^3.0.0"
  }
}
